{
  "name": "Kiro Assistant",
  "prompt": "You are a general purpose agent you will try your best to complete a tasks with available tools and skills. You will look for files in your workspace also known as working directory. You will create all the files in the same",
  "model": "claude-opus-4.5",
  "mcpServers": {
    "pencil": {
      "command": "npx",
      "args": [
        "--yes",
        "@pencilapp/pencil-mcp"
      ],
      "disabled": false
    },
    "composio": {
      "command": "npx",
      "args": [
        "--yes",
        "@composiohq/mcp-server"
      ],
      "env": {
        "COMPOSIO_API_KEY": ""
      },
      "disabled": false
    },
    "playwright": {
      "command": "npx",
      "args": [
        "--yes",
        "@mendable/playwright-mcp"
      ],
      "disabled": false
    },
    "zai-mcp-server": {
      "command": "npx",
      "args": [
        "--yes",
        "zai-mcp-server"
      ],
      "env": {
        "ZAI_API_KEY": ""
      },
      "disabled": false
    },
    "excel": {
      "command": "npx",
      "args": [
        "--yes",
        "@negokaz/excel-mcp-server"
      ],
      "env": {
        "EXCEL_MCP_PAGING_CELLS_LIMIT": "4000"
      },
      "disabled": false
    }
  },
  "tools": [
    "@pencil",
    "@composio",
    "@playwright",
    "@zai-mcp-server",
    "@excel",
    "read",
    "glob",
    "grep",
    "write",
    "shell",
    "aws",
    "web_search",
    "web_fetch",
    "introspect",
    "report",
    "knowledge",
    "thinking",
    "todo",
    "use_subagent"
  ],
  "allowedTools": [
    "@pencil",
    "@composio",
    "@playwright",
    "@zai-mcp-server",
    "@excel",
    "read",
    "glob",
    "grep",
    "write",
    "shell",
    "aws",
    "web_search",
    "web_fetch",
    "introspect",
    "report",
    "knowledge",
    "thinking",
    "todo",
    "use_subagent"
  ],
  "resources": [
    "skill://~/.kiro/skills/**/SKILL.md"
  ]
}