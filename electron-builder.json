{
    "appId": "com.devagentforge.kiroassistant",
    "productName": "Kiro Assistant",
    "files": [
        "dist-electron",
        "dist-react"
    ],
    "extraResources": [
        "dist-electron/electron/preload.cjs",
        {
            "from": "resources/agent_config.template.json",
            "to": "agent_config.template.json"
        }
    ],
    "asarUnpack": [
        "node_modules/@anthropic-ai/claude-agent-sdk/**/*"
    ],
    "icon": "./Kiro-the-spirit.png",
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": [
            "portable",
            "msi"
        ]
    }
}
